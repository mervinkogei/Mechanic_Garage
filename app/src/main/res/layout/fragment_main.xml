<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/garage_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/garage_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/defaultMargin"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/garage_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/defaultMargin"
            android:text="@string/garage_name_text"
            android:textSize="30sp"
            tools:text="Garage name" />
    </LinearLayout>

    <TextView
        android:id="@+id/garage_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/garage_banner"
        android:layout_margin="@dimen/defaultMargin"
        android:text="@string/garage_details_text"
        tools:text="Info about your garage" />

    <LinearLayout
        android:id="@+id/garage_contact_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/garage_details"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/defaultMarginSmall"
            android:text="@string/contact_info_text"
            android:textSize="@dimen/actionBarTextSize" />

        <LinearLayout
            android:id="@+id/garage_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/defaultMargin"
            android:layout_marginTop="@dimen/defaultMarginSmall">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_address" />

            <TextView
                android:id="@+id/garage_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/defaultMarginSmall"
                android:text="@string/garage_address_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/garage_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/defaultMargin"
            android:layout_marginTop="@dimen/defaultMarginSmall">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_email" />

            <TextView
                android:id="@+id/garage_email_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/defaultMarginSmall"
                android:text="@string/garage_email_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/garage_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/defaultMargin"
            android:layout_marginTop="@dimen/defaultMarginSmall">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_phone" />

            <TextView
                android:id="@+id/garage_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/defaultMarginSmall"
                android:text="@string/garage_phone_text" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>